.button:hover {
    background-color: rgb(99, 99, 99);
}

.button:active {
    background-color: rgb(125, 125, 125);
}

.button {
    font-size: 32px;
    -unity-font-style: bold;
    width: 300px;
    height: 50px;
    background-color: rgba(65, 65, 65, 255);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    color: rgba(255, 255, 255, 255);
    margin-left: 12px;
    margin-right: 12px;
    margin-top: 20px;
    margin-bottom: 5px;
}
