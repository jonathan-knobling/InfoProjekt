<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <Style src="PauseMenuStyles.uss" />
    <ui:VisualElement name="screen" style="display: none;">
        <ui:VisualElement name="background" style="background-color: rgb(0, 0, 0); opacity: 0.69; height: 1080px; width: 1920px; display: flex; justify-content: center; align-items: center;" />
        <ui:VisualElement name="pause_menu" style="position: absolute; width: 1920px; height: 1080px; align-items: center; justify-content: center; display: flex;">
            <ui:Label text="PAUSE" display-tooltip-when-elided="true" name="header" class="header" />
            <ui:Button text="RESUME" display-tooltip-when-elided="true" name="resume_button" class="button-style" />
            <ui:Button text="OPTIONS" display-tooltip-when-elided="true" name="options_button" class="button-style" />
            <ui:Button text="QUIT" display-tooltip-when-elided="true" name="quit_button" class="button-style" />
        </ui:VisualElement>
        <ui:VisualElement name="options_menu" style="width: 1920px; height: 1080px; position: absolute; align-items: center; justify-content: center; display: none;">
            <ui:Label text="OPTIONS" display-tooltip-when-elided="true" name="header" class="header" />
            <ui:Button text="BACK" display-tooltip-when-elided="true" name="back_button" class="button-style" style="position: absolute; bottom: 35px;" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
