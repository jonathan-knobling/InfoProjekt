.button-style {
    height: 71px;
    width: 280px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    background-color: rgb(114, 193, 242);
    color: rgb(0, 0, 0);
    -unity-font-style: bold;
    font-size: 25px;
    border-left-color: rgba(114, 193, 242, 255);
    border-right-color: rgba(114, 193, 242, 255);
    border-top-color: rgba(114, 193, 242, 255);
    border-bottom-color: rgba(114, 193, 242, 255);
}

.button-style:hover {
    height: 71px;
    width: 300px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    background-color: rgb(114, 193, 242);
    color: rgb(0, 0, 0);
    -unity-font-style: bold;
    font-size: 25px;
    border-left-color: rgba(114, 193, 242, 255);
    border-right-color: rgba(114, 193, 242, 255);
    border-top-color: rgba(114, 193, 242, 255);
    border-bottom-color: rgba(114, 193, 242, 255);
}

.button-style:active {
    height: 71px;
    width: 280px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    background-color: rgb(114, 193, 242);
    color: rgb(255, 255, 255);
    -unity-font-style: bold;
    font-size: 25px;
    -unity-text-outline-color: rgb(0, 0, 0);
    border-left-color: rgba(114, 193, 242, 255);
    border-right-color: rgba(114, 193, 242, 255);
    border-top-color: rgba(114, 193, 242, 255);
    border-bottom-color: rgba(114, 193, 242, 255);
}
